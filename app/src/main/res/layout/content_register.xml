<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tech9teen.RegisterActivity"

    tools:showIn="@layout/activity_register">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Fill in all fields to create a free account"
                android:textColor="@color/black" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"


                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="#FFFFFFFF"
                card_view:cardCornerRadius="2dp"


                card_view:cardElevation="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_edtName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.13"
                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top|left"
                        android:hint="Enter Name"


                        android:inputType="textCapWords"

                        android:minLines="1"

                        />
                </android.support.design.widget.TextInputLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:id="@+id/llsingle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="#FFFFFFFF"
                card_view:cardCornerRadius="2dp"


                card_view:cardElevation="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_edtEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.13"
                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top|left"
                        android:hint="Enter Email"


                        android:inputType="textEmailAddress"

                        android:minLines="1"

                        />
                </android.support.design.widget.TextInputLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"


                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="#FFFFFFFF"
                card_view:cardCornerRadius="2dp"


                card_view:cardElevation="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_edtMobile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.13"
                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtMobile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top|left"
                        android:hint="Enter Mobile Ex.9723613143"

                        android:maxLength="10"

                        android:inputType="numberSigned"

                        android:minLines="1"

                        />
                </android.support.design.widget.TextInputLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="An Activation code will be sent to your phone number"
                android:textColor="@color/black"

                />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"


                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardBackgroundColor="#FFFFFFFF"
                card_view:cardCornerRadius="2dp"


                card_view:cardElevation="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_edtPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.13"
                    android:gravity="center|left">

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top|left"
                        android:hint="Enter Password"


                        android:inputType="textPassword"


                        android:minLines="1"

                        />
                </android.support.design.widget.TextInputLayout>


            </android.support.v7.widget.CardView>

            <CheckBox
                android:id="@+id/chkPassword"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Show Password" />

            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_rect_list_normal_blue"

                android:text="Create a Free Account"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:text="By clicking 'Create a Free Account' you agree to Anti-Spam Policy and Terms of Service" />


            <TextView

                android:id="@+id/txtTerms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="See Terms of Service"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/dot_dark_screen3"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
